<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="file.LargeFolder.deploy" scope="deployed">
        <conditions>
            <type>file.DeployedLargeFolder</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <upload-artifact>
                <description expression="true">"Copy {0} to {1}".format(deployed.name, deployed.container.name)</description>
                <order>60</order>
                <target-path expression="true">deployed.targetPath</target-path>
                <shared-target>False</shared-target>
            </upload-artifact>
        </steps>
    </rule>

    <rule name="file.LargeFolder.undeploy" scope="deployed">
        <conditions>
            <type>file.DeployedLargeFolder</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <delete-artifact>
                <description expression="true">"Remove {0} from {1}".format(previousDeployed.name, previousDeployed.container.name)</description>
                <order>40</order>
                <target-path expression="true">previousDeployed.targetPath</target-path>
            </delete-artifact>
        </steps>
    </rule>

</rules>
